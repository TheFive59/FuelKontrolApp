<layer-list xmlns:android="http://schemas.android.com/apk/res/android"> <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="#0b131e"
                android:centerY="1.0"
                android:endColor="@color/colorSendText"
                android:startColor="@color/fondo" />
        </shape>
    </item> <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="@color/color_despacho_activo"
                    android:centerY="1.0"
                    android:endColor="@color/fondo"
                    android:startColor="@color/color_despacho_activo" />
            </shape>
        </clip>
    </item>
</layer-list>

