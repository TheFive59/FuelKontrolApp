<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fuelkontrol.activity.ActivityAjustes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txtMostrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18sp"
            android:text="ConfiguraciÃ³n"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtMostrar"
            app:layout_constraintVertical_bias="1"
            tools:ignore="MissingConstraints" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/btnTest"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/stylo_borde_encabezados"
            android:src="@drawable/database_fuel_kontrol">

        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="150dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="115sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15sp"
            android:background="@drawable/stylo_borde_encabezados"
            android:text="SERVIDOR"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtMostrar"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/edtServidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15sp"
            android:background="@drawable/stylo_borde_editext"
            android:clickable="true"
            android:hint="Servidor"
            android:inputType="text"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColorHighlight="#009688"
            android:textColorHint="@color/light_blue_900"
            android:textColorLink="#009688"
            android:textSize="14sp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="210dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="115sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/stylo_borde_encabezados"
            android:text="BASE DE DATOS"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtMostrar"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/edtBaseDatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15sp"
            android:background="@drawable/stylo_borde_editext"
            android:hint="Base de datos"
            android:inputType="text"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColorHighlight="#009688"
            android:textColorHint="@color/light_blue_900"
            android:textColorLink="#009688"
            android:textSize="12sp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="270dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="115sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/stylo_borde_encabezados"
            android:text="USUARIO"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtMostrar"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/edtUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15sp"
            android:background="@drawable/stylo_borde_editext"
            android:hint="Usuario"
            android:inputType="text"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColorHighlight="#009688"
            android:textColorHint="@color/light_blue_900"
            android:textColorLink="#009688"
            android:textSize="12sp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="330dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="115sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/stylo_borde_encabezados"
            android:text="CLAVE"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtMostrar"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/edtContraBase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15sp"
            android:background="@drawable/stylo_borde_editext"
            android:hint="Clave"
            android:inputType="textPassword"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColorHighlight="#009688"
            android:textColorHint="@color/light_blue_900"
            android:textColorLink="#009688"
            android:textSize="12sp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="380dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="115sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/stylo_borde_encabezados"
            android:text="EMPRESA"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtMostrar"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/edtEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15sp"
            android:background="@drawable/stylo_borde_editext"
            android:hint="Empresa"
            android:inputType="text"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColorHighlight="#009688"
            android:textColorHint="@color/light_blue_900"
            android:textColorLink="#009688"
            android:textSize="12sp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="430dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="115sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/stylo_borde_encabezados"
            android:text="FORMATO D"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtMostrar"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/edtFormatoDespacho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15sp"
            android:background="@drawable/stylo_borde_editext"
            android:hint="Formato despacho"
            android:inputType="text"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:text="yyyy/dd/MM HH:mm:ss"
            android:textAlignment="center"
            android:textColorHighlight="#009688"
            android:textColorHint="@color/light_blue_900"
            android:textColorLink="#009688"
            android:textSize="12sp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="480dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="115sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/stylo_borde_encabezados"
            android:text="FORMATO DD"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtMostrar"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/edtFormatoDatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15sp"
            android:background="@drawable/stylo_borde_editext"
            android:hint="Formato Datos"
            android:inputType="text"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:text="dd/MM/yyyy HH:mm:ss"
            android:textAlignment="center"
            android:textColorHighlight="#009688"
            android:textColorHint="@color/light_blue_900"
            android:textColorLink="#009688"
            android:textSize="12sp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="560dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/stylo_borde_editext"
            android:gravity="center"
            android:text="Guardar"
            android:textAlignment="center"
            android:textSize="15sp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

</RelativeLayout>