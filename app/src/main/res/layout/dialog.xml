<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_container"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15sp"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewTanque"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginHorizontal="15dp"
            android:src="@drawable/logo_fuel" />

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"

            android:textColor="@color/fondo"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>


    <View
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/dialog_divider" />

    <TextView
        android:id="@+id/mensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <ScrollView
        android:id="@+id/cuerpo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_weight="1">

        <EditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:autofillHints=""
            android:singleLine="true"
            android:maxLines="1"
            android:imeOptions="actionGo"
            android:gravity="center"
            android:hint="Ingrese unidad"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/botonera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelar"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:background="@drawable/dialog_button_selector"
                android:gravity="left"
                android:text="    ✘     "
                android:textColor="@android:color/white" />
        </LinearLayout>
        <View
            android:id="@+id/divider2"
            android:layout_width="50sp"
            android:layout_height="5sp"
            android:background="?android:attr/listDivider" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">
            <Button
                android:id="@+id/aceptar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@drawable/dialog_button_selector"
                android:gravity="right"
                android:text="BUSCAR 🔍"
                android:textColor="@android:color/white" />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>